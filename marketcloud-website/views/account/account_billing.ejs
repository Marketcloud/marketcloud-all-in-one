                  <td>{{subscription.metadata.plan_name}}</td>
                  <td>{{subscription.current_period_end * 1000 | date:'yyyy-MM-dd HH:mm:ss'}}</td>
                  
                </tr>
              </tbody>
            </table>
          </div>
        </div>
