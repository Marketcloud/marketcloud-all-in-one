      <div class="col-xs-12 col-md-6 col-md-offset-3" style="padding-top: 50px;padding-bottom: 100px;">
        
        <div>
          <div class="alert alert-success" ng-show="true === showUpdateSuccessfulMessage" ng-cloak>
            <b>Success</b><br>
            Your billing information has been updated.
            <button class="btn btn-sm btn-empty-white" onclick="window.location.reload()"><i class="fa fa-refresh"></i> Refresh</button>
          </div>
        </div>


        <div class="spinner" ng-show=""></div>
        
        <!-- Payments information card -->
        <div class="card mb50" ng-cloak>
          <div class="card-header">
            <h4>Payment information</h4>
          </div>
          <div class="card-content">
            <% if (!parsedUser.hasOwnProperty('stripe') || parsedUser.stripe.sources.data.length === 0 ) {%>
            <div class="text-muted">You did not enter any credit card</div>
            <% }  else {%>
            <% for (var i=0; i< parsedUser.stripe.sources.data.length; i++) {
            var card = parsedUser.stripe.sources.data[i];
            %>
            <div>This account is billed to <span style="margin-right: 20px"></span>
            <% if("Visa" === card.brand) {%> <i class="fa fa-cc-visa"></i> <%}%>
            <% if("American Express" === card.brand) {%><i class="fa fa-cc-amex"></i><%}%>
            <% if("MasterCard" === card.brand) {%><i class="fa fa-cc-mastercard"></i><%}%>
            <% if("Diners Club" === card.brand) {%><i class="fa fa-cc-diners-club" ></i><%}%>
            <% if("JCB" === card.brand) {%><i class="fa fa-cc-jcb"></i><%}%>
            <% if("Discover" === card.brand) {%><i class="fa fa-cc-discover"></i><%}%>
            
            
            <b><%= card.brand %></b> ending in <b><%= card.last4%></b>
          </div>
          <% } %>
          <% }%>
          <div class="mt20">
            <button class="btn btn-info" data-toggle="modal" data-target="#updateCreditCardModal">Update payment information</button>
          </div>
        </div>
      </div>
      <!-- END of payments information card -->
      <!-- Billing information card -->
